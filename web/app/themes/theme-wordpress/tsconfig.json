{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"target": "es2017"
	},
	"include": ["ts/**/*", "path/to/file.ts"], // Add the file or directory path here
	"exclude": ["js"]
}